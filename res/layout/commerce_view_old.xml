<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="11"
    android:rowCount="9"
    tools:listitem="@android:layout/simple_list_item_2" >

    <ImageView
        android:id="@+id/logoImg"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|fill_vertical"
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:src="@drawable/logo_dif" />

    <TextView
        android:id="@+id/commDesc"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="3"
        android:padding="4dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/coverImg"
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:layout_column="1"
        android:layout_columnSpan="10"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="5"
        android:paddingBottom="4dp"
        android:src="@drawable/cover_dif" />

    <FrameLayout
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|fill_vertical"
        android:layout_row="6"
        android:layout_rowSpan="3" >

    </FrameLayout>
    
    <Button
        android:id="@+id/followBtn"
        style="@style/AppBaseTheme"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="6"
        android:background="@drawable/myshape"
        android:text="Suivre" />

    <Button
        android:id="@+id/shareBtn"
        style="@style/AppBaseTheme"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="7"
        android:background="@drawable/myshape"
        android:text="Partager" />

    <Button
        android:id="@+id/closeBtn"
        style="@style/AppBaseTheme"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="8"
        android:background="@drawable/myshape"
        android:text="Retour" />

    <TextView
        android:id="@+id/commName"
        android:layout_width="18dp"
        android:layout_height="53dp"
        android:layout_column="2"
        android:layout_columnSpan="9"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="1"
        android:paddingLeft="4dp"
        android:paddingTop="8dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/commSub"
        android:layout_width="138dp"
        android:layout_height="36dp"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="2"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_column="3"
        android:layout_gravity="left|center_vertical"
        android:layout_row="7"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/testHtml"
        android:layout_column="3"
        android:layout_gravity="left|center_vertical"
        android:layout_row="6"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="156dp"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:layout_row="6"
        android:paddingLeft="4dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:layout_row="7"
        android:paddingLeft="4dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:textColor="#000000"/>

</GridLayout>