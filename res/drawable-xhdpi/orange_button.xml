<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#f0ac4d" />
            <stroke
                android:width="1dp"
                android:color="#e38d13" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#f0ac4d"
                android:endColor="#e38d13"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#e38d13" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>